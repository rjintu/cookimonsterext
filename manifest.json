{
  "name": "CookiMonster",
  "description": "Increase the user's awareness of cookies on a browser",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["cookies", "tabs"],
  "host_permissions": ["http://*/*","https://*/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": { "16": "/images/cookie-16.png",
              "48": "/images/cookie-48.png",
              "128": "/images/cookie-128.png" 
    }
  },
  "icons": { "16": "/images/cookie-16.png",
              "48": "/images/cookie-48.png",
              "128": "/images/cookie-128.png" },
  "options_page": "options.html"
}
